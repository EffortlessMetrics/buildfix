{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:effortless:buildfix.report.v1",
  "title": "buildfix.report.v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "tool",
    "run",
    "verdict",
    "findings"
  ],
  "properties": {
    "schema": {
      "const": "buildfix.report.v1"
    },
    "tool": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "version"
      ],
      "properties": {
        "name": {
          "const": "buildfix"
        },
        "version": {
          "type": "string"
        },
        "commit": {
          "type": "string"
        }
      }
    },
    "run": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "started_at"
      ],
      "properties": {
        "started_at": {
          "type": "string",
          "format": "date-time"
        },
        "ended_at": {
          "type": "string",
          "format": "date-time"
        },
        "duration_ms": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "verdict": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "status",
        "counts"
      ],
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "pass",
            "warn",
            "fail",
            "skip"
          ]
        },
        "counts": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "info",
            "warn",
            "error"
          ],
          "properties": {
            "info": {
              "type": "integer",
              "minimum": 0
            },
            "warn": {
              "type": "integer",
              "minimum": 0
            },
            "error": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "reasons": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      }
    },
    "findings": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "severity",
          "code",
          "message"
        ],
        "properties": {
          "severity": {
            "type": "string",
            "enum": [
              "info",
              "warn",
              "error"
            ]
          },
          "check_id": {
            "type": "string"
          },
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "location": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "path": {
                "type": "string"
              },
              "line": {
                "type": "integer",
                "minimum": 1
              },
              "col": {
                "type": "integer",
                "minimum": 1
              }
            }
          },
          "fingerprint": {
            "type": "string"
          },
          "data": {}
        }
      }
    },
    "data": {
      "type": [
        "object",
        "array",
        "string",
        "number",
        "boolean",
        "null"
      ],
      "default": null,
      "description": "Tool-specific payload (plan/apply pointers, counts)."
    }
  }
}
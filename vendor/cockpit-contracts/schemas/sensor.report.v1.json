{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:cockpit:sensor.report.v1",
  "title": "sensor.report.v1",
  "description": "Universal envelope for sensor output in the Cockpit ecosystem.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "tool",
    "run",
    "verdict"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_-]*\\.report\\.v[0-9]+$",
      "description": "Schema identifier, e.g. 'buildfix.report.v1', 'builddiag.report.v1'"
    },
    "tool": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "version"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Tool name, e.g. 'buildfix', 'builddiag'"
        },
        "version": {
          "type": "string",
          "minLength": 1,
          "description": "Tool version, e.g. '0.1.0'"
        },
        "repo": {
          "type": "string",
          "description": "Repository URL"
        },
        "commit": {
          "type": "string",
          "description": "Git commit SHA"
        }
      }
    },
    "run": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "started_at"
      ],
      "properties": {
        "started_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp when the run started"
        },
        "ended_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp when the run ended"
        },
        "duration_ms": {
          "type": "integer",
          "minimum": 0,
          "description": "Duration in milliseconds"
        },
        "git_head_sha": {
          "type": "string",
          "description": "Git HEAD SHA at run time"
        }
      }
    },
    "verdict": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "status",
        "counts"
      ],
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "pass",
            "warn",
            "fail",
            "skip"
          ],
          "description": "Overall verdict status (frozen vocabulary)"
        },
        "counts": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "info",
            "warn",
            "error"
          ],
          "properties": {
            "info": {
              "type": "integer",
              "minimum": 0,
              "description": "Count of info-level findings"
            },
            "warn": {
              "type": "integer",
              "minimum": 0,
              "description": "Count of warn-level findings"
            },
            "error": {
              "type": "integer",
              "minimum": 0,
              "description": "Count of error-level findings"
            }
          }
        },
        "reasons": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Human-readable reasons for the verdict"
        }
      }
    },
    "findings": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "severity",
          "code",
          "message"
        ],
        "properties": {
          "severity": {
            "type": "string",
            "enum": [
              "info",
              "warn",
              "error"
            ],
            "description": "Finding severity (frozen vocabulary)"
          },
          "check_id": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$",
            "description": "Check identifier, e.g. 'workspace_resolver'"
          },
          "code": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$",
            "description": "Finding code within check, e.g. 'missing_v2'"
          },
          "message": {
            "type": "string",
            "description": "Human-readable message"
          },
          "location": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "path"
            ],
            "properties": {
              "path": {
                "type": "string",
                "description": "Repo-relative path (forward slashes, no leading ./)"
              },
              "line": {
                "type": "integer",
                "minimum": 1,
                "description": "1-based line number"
              },
              "col": {
                "type": "integer",
                "minimum": 1,
                "description": "1-based column number"
              }
            }
          },
          "fingerprint": {
            "type": "string",
            "description": "Stable key for deduplication across runs"
          },
          "data": {
            "description": "Tool-specific finding payload"
          }
        }
      }
    },
    "capabilities": {
      "type": "object",
      "additionalProperties": false,
      "description": "Capabilities block for 'No Green By Omission' pattern",
      "properties": {
        "check_ids": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of check_ids this sensor can emit"
        },
        "scopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Scopes this sensor covers, e.g. ['workspace', 'crate']"
        },
        "partial": {
          "type": "boolean",
          "default": false,
          "description": "True if some inputs could not be processed"
        },
        "reason": {
          "type": "string",
          "description": "Reason for partial results, if applicable"
        },
        "inputs_available": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Successfully loaded input paths/receipts"
        },
        "inputs_failed": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "path",
              "reason"
            ],
            "properties": {
              "path": {
                "type": "string",
                "description": "Path that failed to load"
              },
              "reason": {
                "type": "string",
                "description": "Reason for failure"
              }
            }
          },
          "description": "Input paths that failed to load"
        }
      }
    },
    "artifacts": {
      "type": "object",
      "additionalProperties": false,
      "description": "Pointers to related artifact files",
      "properties": {
        "plan": {
          "type": "string",
          "description": "Path to plan.json relative to report"
        },
        "apply": {
          "type": "string",
          "description": "Path to apply.json relative to report"
        },
        "patch": {
          "type": "string",
          "description": "Path to patch.diff relative to report"
        },
        "comment": {
          "type": "string",
          "description": "Path to comment.md relative to report"
        }
      }
    },
    "data": {
      "description": "Tool-specific payload (extension point)"
    }
  }
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:effortless:buildfix.report.v1",
  "title": "buildfix.report.v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "tool",
    "run",
    "verdict",
    "findings"
  ],
  "properties": {
    "schema": {
      "const": "buildfix.report.v1"
    },
    "tool": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "version"
      ],
      "properties": {
        "name": {
          "const": "buildfix"
        },
        "version": {
          "type": "string"
        },
        "commit": {
          "type": "string"
        }
      }
    },
    "run": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "started_at"
      ],
      "properties": {
        "started_at": {
          "type": "string",
          "format": "date-time"
        },
        "ended_at": {
          "type": "string",
          "format": "date-time"
        },
        "duration_ms": {
          "type": "integer",
          "minimum": 0
        },
        "git_head_sha": {
          "type": "string",
          "description": "Git HEAD SHA at run time"
        }
      }
    },
    "verdict": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "status",
        "counts"
      ],
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "pass",
            "warn",
            "fail",
            "skip"
          ]
        },
        "counts": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "info",
            "warn",
            "error"
          ],
          "properties": {
            "info": {
              "type": "integer",
              "minimum": 0
            },
            "warn": {
              "type": "integer",
              "minimum": 0
            },
            "error": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "reasons": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      }
    },
    "findings": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "severity",
          "code",
          "message"
        ],
        "properties": {
          "severity": {
            "type": "string",
            "enum": [
              "info",
              "warn",
              "error"
            ]
          },
          "check_id": {
            "type": "string"
          },
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "location": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "path": {
                "type": "string"
              },
              "line": {
                "type": "integer",
                "minimum": 1
              },
              "col": {
                "type": "integer",
                "minimum": 1
              }
            }
          },
          "fingerprint": {
            "type": "string"
          },
          "data": {}
        }
      }
    },
    "capabilities": {
      "type": "object",
      "additionalProperties": false,
      "description": "Capabilities block for 'No Green By Omission' pattern",
      "properties": {
        "check_ids": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of check_ids this sensor can emit"
        },
        "scopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Scopes this sensor covers, e.g. ['workspace', 'crate']"
        },
        "partial": {
          "type": "boolean",
          "default": false,
          "description": "True if some inputs could not be processed"
        },
        "reason": {
          "type": "string",
          "description": "Reason for partial results, if applicable"
        },
        "inputs_available": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Successfully loaded input paths/receipts"
        },
        "inputs_failed": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "path",
              "reason"
            ],
            "properties": {
              "path": {
                "type": "string",
                "description": "Path that failed to load"
              },
              "reason": {
                "type": "string",
                "description": "Reason for failure"
              }
            }
          },
          "description": "Input paths that failed to load"
        }
      }
    },
    "artifacts": {
      "type": "object",
      "additionalProperties": false,
      "description": "Pointers to related artifact files",
      "properties": {
        "plan": {
          "type": "string",
          "description": "Path to plan.json relative to report"
        },
        "apply": {
          "type": "string",
          "description": "Path to apply.json relative to report"
        },
        "patch": {
          "type": "string",
          "description": "Path to patch.diff relative to report"
        },
        "comment": {
          "type": "string",
          "description": "Path to comment.md relative to report"
        }
      }
    },
    "data": {
      "type": [
        "object",
        "array",
        "string",
        "number",
        "boolean",
        "null"
      ],
      "default": null,
      "description": "Tool-specific payload (plan/apply pointers, counts)."
    }
  }
}
